<div class="row">
    <div class="col-lg-12">
        <nav class="navbar navbar-inverse bottom-squeeze top-squeeze">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">PetitionSite</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        @*<li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li>
                        <li><a href="@Url.Action("Petitions", "Home")" class="elements">Petitions</a></li>*@
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Petitions" ? "active" : "")">@Html.ActionLink("Petitions", "Petitions", "Home")</li>
                    </ul>
                    <form class="navbar-form navbar-right">
                        <button id="loginBtn" class="btn btn-default">Login</button>
                        <p id="userPlaceholder" class="text-primary"></p>
                    </form>

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#userPlaceholder").hide();
        var currentUser = sessionStorage.getItem("user");
        if (currentUser != null) {
            $("#loginBtn").hide();
            $("#userPlaceholder").show();
            $("#userPlaceholder").text(currentUser);
        }
    });
</script>