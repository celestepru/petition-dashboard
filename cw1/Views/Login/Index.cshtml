    <div class="row" style="margin:2%;">
        <div class="col-lg-2 col-lg-offset-4" style="margin-right: 0">
            <p>Not a member yet?</p>
        </div>
        <div class="col-lg-1" style="margin-left: 0">
            <button id="signupBtn" class="btn btn-danger btn-xs">Sign up</button>
        </div>
    </div>
    <!-- SELECT EDIT (view all db entries -->
    <form>
        <select name="id" size="5" style="width: 250px">
            @foreach (var c in Model)
            {
                <option value="@c.Username">@c.Username</option>
                <option value="@c.Password">@c.Password</option>
            }
        </select>
        <br />
    </form>
</div>

<div id="signupForm" class="container-fluid">
    <div class="spacer"></div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 text-center">
            <h2>Become a member</h2>
        </div>
    </div>

    <!-- Add new memner -->
    <div class="row">
        <div class="col-lg-2 col-lg-offset-5">
            @Html.Partial("_RenderNewMember", new cw1.Models.Member())
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#signupForm").hide();
    });

    $("#signupBtn").on("click", function () {
        $("#loginForm").fadeOut(function () {
            $("#signupForm").fadeIn();
        });
    });

</script>
