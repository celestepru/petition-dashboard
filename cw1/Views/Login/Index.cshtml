    <div class="spacer"></div>
    <div class="row">
        @ViewBag.Message
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <h2>Please log in</h2>
        </div>
    </div>
    <!-- Login -->
    <div class="row">
        <div class="col-lg-2 col-lg-offset-5">
            @Html.Partial("_LoginMember", new cw1.Models.Member())
        </div>
    </div>
